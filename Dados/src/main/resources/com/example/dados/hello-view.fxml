<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dados.HelloController">
   <center>
      <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
            <ImageView fitHeight="250.0" fitWidth="250.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
         </children>
      </GridPane>
   </center>
   <top>
      <Label text="Juego de dados" BorderPane.alignment="CENTER">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <RadioButton fx:id="radioMenor" mnemonicParsing="false" text="Menor">
                     <font>
                        <Font size="18.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="radioIgual" mnemonicParsing="false" text="Igual">
                     <font>
                        <Font size="18.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="radioMayor" mnemonicParsing="false" text="Mayor">
                     <font>
                        <Font size="18.0" />
                     </font></RadioButton>
               </children>
            </VBox>
            <Button fx:id="buttonLanzar" mnemonicParsing="false" onAction="#buttonLanzarClick" text="Lanzar dado">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </FlowPane>
   </bottom>
</BorderPane>
